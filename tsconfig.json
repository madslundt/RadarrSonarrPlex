{
    "compilerOptions": {
        "outDir": "chrome",
        "module": "commonjs",
        "target": "es5",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "allowUnreachableCode": true
    },
    "exclude": [
        "node_modules",
        "scripts",
        "webpack",
        "src/setupTests.ts"
    ],
    "types": [
        "typePatches"
    ]
}
