{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "space-before-function-paren": [2, "never"],
    "space-in-parens": [2, "never"],
    "array-bracket-spacing": [2, "never"],
    "object-curly-spacing": [2, "never"],
    "semi": 2,
    "comma-dangle": [1, "always-multiline"],
    "quotes": [2, "single"],
    "semi-spacing": 2,
    "eqeqeq": 2,
    "indent": [2, 2, {"SwitchCase": 1}],
    "no-multi-spaces": 2,
    "no-var": 2,
    "object-shorthand": 2
  }
}
